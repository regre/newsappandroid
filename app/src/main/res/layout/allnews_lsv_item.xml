<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res/com.viaviapp.newsapplication"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:layout_margin="5dp"
    android:orientation="horizontal"
    android:background="@drawable/list_selector" >

      <com.example.util.RoundedImageView
        android:id="@+id/img_cat"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        app:border_color="@color/divider"
        app:border_width="5dip"
        app:corner_radius="30dip"
        app:is_oval="true"
        app:round_background="true" />

    <TextView
        android:id="@+id/txt_allnews_categty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="0dp"
        android:layout_gravity="center"
        android:maxLines="2"
        android:textColor="@color/texthoverclr"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>